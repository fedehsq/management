<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    >

    <TextView
        android:id="@+id/company_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_example"
        android:textAppearance="?textAppearanceListItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"
        />

    <TextView
        android:id="@+id/truck_brand_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_example"
        android:textAppearance="?textAppearanceListItemSecondary"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/company_text_view"
        app:layout_constraintTop_toBottomOf="@id/company_text_view" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_example"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/truck_brand_text_view"
        app:layout_constraintTop_toBottomOf="@id/truck_brand_text_view" />

    <ImageButton
        android:id="@+id/delete_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_delete_forever_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/truck_brand_text_view"
        app:layout_constraintBottom_toBottomOf="@id/truck_brand_text_view"
        android:layout_marginEnd="32dp"
        />

    <ImageView
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/date_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/line"
        >

    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>